@model List<Randevu>

@if (Model == null)
{
    <div class="alert alert-info" role="alert">
        Randevunuz bulunmamaktadır.
    </div>
}
else 
{
    <div class="container mt-5">
        <h2>Randevularım</h2>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Salon Adı</th>
                    <th>Başlangıç Tarihi</th>
                    <th>Kuaför Adı ve Soyadı</th>
                    <th>İşlem</th>
                    <th>Fiyat</th>
                    <th>Onay Durumu</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Kuafor.Salon.Ad</td>
                        <td>@randevu.BaslangicTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@randevu.Kuafor.Kullanici.Ad @randevu.Kuafor.Kullanici.Soyad</td>
                        <td>@randevu.Yetenek.Ad</td>
                        <td>@randevu.Yetenek.Fiyat</td>
                        <td>
                            @if (randevu.Onayli)
                            {
                                <span class="badge text-bg-success">Onaylandı</span>
                            }
                            else
                            {
                                <span class="badge text-bg-warning">Beklemede</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
