@model List<Randevu>


<h4>Onayladığım Randevular:</h4>

@{
    if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            Onaylı herhangi bir randevunuz yok.
        </div>
    }
    else
    {
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Kullanıcı Ad ve Soyad</th>
                    <th>Yapılacak İşlem</th>
                    <th>Başlangıç Tarihi</th>
                    <th>İşlem Süresi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Kullanici.Ad @randevu.Kullanici.Soyad</td>
                        <td>@randevu.Yetenek.Ad</td>
                        <td>@randevu.BaslangicTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@randevu.Yetenek.Sure dk</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
