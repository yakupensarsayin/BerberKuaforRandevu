@using BerberKuaforRandevu.Dto.Yetenek
@model YetenekDuzenleDto
@{
    ViewData["Title"] = "Yetenek Düzenle";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="Duzenle" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="row g-3">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Sure" class="control-label">Süre (dk)</label>
                <input asp-for="Sure" class="form-control" />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Fiyat" class="control-label">Fiyat (TL)</label>
                <input asp-for="Fiyat" id="Fiyat" class="form-control" />
                <span asp-validation-for="Fiyat" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary mt-3" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}