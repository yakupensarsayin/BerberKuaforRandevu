@model List<Yetenek>

@{
    ViewData["Title"] = "Yetenekler";
}

<h2>@ViewData["Title"]</h2>
<hr />

<a asp-action="Olustur" class="btn btn-primary mb-3">Yeni Yetenek Oluştur</a>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad</th>
                <th>Süre</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Ad</td>
                    <td>@item.Sure</td>
                    <td>@item.Fiyat TL</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
